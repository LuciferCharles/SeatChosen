.container{
  width: 100%;
}
.head{
  display: flex;
  border: 1px solid whitesmoke;
  background: rgb(36, 177, 66);
}
.head text{
  height: 2.5rem;
  line-height: 2.5rem;
  width: 18%;
  text-align: center;
  color: white;
}
.detail{
  width: 100%;
  height: 900rpx;
  border: solid 1px skyblue;
}
.detail_item{
  width: 100%;
  /* display: flex; */
  display: block;
  flex-direction: column;
  margin-top: 5px;
  height: 30px;
  line-height: 30px;
}
.order_item{
  display: flex;
  flex-direction: row;
  border: solid 1px skyblue;
  margin-top: 5px;
}
.order_item text{
  width: 16%;
  text-align: center;
  font-size: 30rpx;
}
.column3{
  margin-left: 16px;
}
